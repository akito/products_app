<header>
  <nav class="navbar is-transparent">
  <div class="container">
    <div class="navbar-brand">
      <%= link_to image_tag('product_square_color.svg'), root_path, class: 'navbar-item', alt: 'Product Square Logo', size: "200x28" %>
      <div class="has-addons navbar-item is-fullwidth">
        <div class="control is-expanded">
          <input class="input is-small is-fullwidth" type="text" placeholder="素敵なサービスが見つけよう" style="width:250px;">
        </div>
        <div class="control">
          <a class="button is-dark is-small">
            <%= fa_icon "search" %>
          </a>
        </div>
      </div>


      <div class="navbar-burger burger" data-target="navbarTransparent">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
    <div id="navbarTransparent" class="navbar-menu">
      <div class="navbar-start">
      </div>

      <div class="navbar-end">
        <div class="navbar-item has-dropdown is-hoverable">
          <%= link_to 'カテゴリー', categories_path, class: 'navbar-link is-size-7'%>
          <div class="navbar-dropdown is-boxed">
            <% @categories.each do |category| %>
              <%= link_to category.name, category_path(category), class: 'navbar-item is-size-7'%>
            <% end %>
            <hr class="navbar-divider">
            <a class="navbar-item" href="https://bulma.io/documentation/elements/box/">
              Elements
            </a>
            <a class="navbar-item is-active" href="https://bulma.io/documentation/components/breadcrumb/">
              Components
            </a>
          </div>
        </div>

        <% if current_user %>
          <%= link_to 'プロダクトを登録', new_product_path, class: 'navbar-item is-size-7'%>
        <% end %>
        <a class="navbar-item is-size-7" href="./post.html">
          お気に入り一覧
        </a>

        <div class="navbar-item">
          <div class="field is-grouped">
            <% if current_user %>
              <p class="control">
                <%= link_to "logout", destroy_user_session_path, method: :delete, class: 'button is-light is-small' %>
              </p>
            <% else %>
              <p class="control" id="showModal">
                <%= link_to "ログイン", new_user_session_path, class: 'button is-light is-small' %>
              </p>
              <p class="control">
                <%= link_to "アカウントを作成", new_user_registration_path, class: 'button is-dark is-small' %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>
</header>