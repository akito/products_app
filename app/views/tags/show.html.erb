<% content_for :searchbox do  %>
  <%= render 'shared/searchbox' %>
<% end %>
<div class="columns">
  <div class="column is-4">
    <section class="section box is-shadowless" style="padding: 0.5rem 1.5rem;">
      <p class="title is-size-4"><%= @tag.label %>
        <span>
        <% if user_signed_in? and current_user.admin? %>
          <%= link_to '編集', edit_tag_path(@tag), class: 'is-size-7'%>
            <%= link_to '削除', @tag, method: :delete, class: 'is-size-7', data: {confirm: '本当に削除しますか?'} %>
        <% end %>
      </span>
      </p>
    </section>
    <%= render partial: 'shared/ranking', locals: {products: @product_ranking, title: 'タグが同じプロダクトのお気に入りランキング'} unless @product_ranking.empty? %>
  </div>
  <div class="column is-8">
    <%= render partial: 'tags/products', locals: {products: @products, tag: @tag } unless @products.empty? %>
  </div>
</div>


