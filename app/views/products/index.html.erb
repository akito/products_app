<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Desc</th>
      <th>Image</th>
      <th>Thumbnail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.url %></td>
        <td><%= product.desc %></td>
        <td><%= product.image %></td>
        <td><%= product.thumbnail %></td>
        <td>
          <% if product.liked?(current_user) %>
            <!-- TODO:refactoring-->
            <%= link_to (fa_icon 'heart',class: 'heart-red'), like_path(product.likes.find_by(user_id: current_user.id)), method: :delete, remote: true %>
          <% else %>
            <%= link_to (fa_icon 'heart',class: 'heart-gray'), likes_path(like: {user_id: current_user.id, product_id: product.id}), method: :post, remote: true %>
          <% end %>
        </td>
        <td><%= link_to 'Show', product %></td>
        <% if user_signed_in? %>
          <% if product.owned_by?(current_user) %>
            <td><%= link_to 'Edit', edit_product_path(product) %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>

          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
  <%= link_to 'New Product', new_product_path %>
<% end %>