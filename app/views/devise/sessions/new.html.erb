<div class="columns is-centered">
  <div class="column  is-narrow is-half is-12-mobile is-4-desktop is-centered">
    <div class="box">
      <section class="section">
        <p class="subtitle has-text-grey is-aligin-center">メールアドレスでログイン</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <p class="control has-icons-left">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "メールアドレス" %>
              <span class="icon is-small is-left"><%= fa_icon "envelope" %></span>
            </p>
          </div>
          <div class="field">
            <p class="control has-icons-left">
              <%= f.password_field :password, autocomplete: "off", class: "input", placeholder: "パスワード(6文字以上)" %>
              <span class="icon is-small is-left"><%= fa_icon "lock" %></i></span>
            </p>
            <% if devise_mapping.rememberable? -%>
              <label class="checkbox">
                <%= f.check_box :remember_me %> パスワードを保存しますか
              </label>
            <% end -%>
            <div class="actions field" style="padding:30px 0;">
              <%= f.submit "ログイン", class: "button is-link is-fullwidth is-rounded" %>
            </div>
          </div>
        <% end %>
        <p class="subtitle has-text-grey is-aligin-center" style="padding-top:30px 0;">SNSアカウントでログイン</p>
        <div class="field">
          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), class:"button is-fullwidth is-rounded has-text-white", style: "background:#3b5998;"%><br/>
            <% end -%>
          <% end -%>
        </div>
        <div class="field">
          <a class="button is-fullwidth is-rounded has-text-white" style="background:#00aced;">
            <span>Twitterでログイン</span>
          </a>
        </div>
        <p class="has-text-centered is-size-7 has-text-grey">SNSに許可なく投稿されることはありません</p>
        <div style="padding:20px;">
          <p class="has-text-centered is-size-7 has-text-grey"><%= render "devise/shared/links" %></p>
        </div>
      </section>
    </div>
  </div>
</div>