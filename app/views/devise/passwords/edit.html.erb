<div class="columns is-centered">
  <div class="column  is-narrow is-half is-12-mobile is-4-desktop is-centered">
    <div class="box">
        <p class="subtitle has-text-grey is-aligin-center">パスワードを更新</p>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <div class="field">
            <p class="control has-icons-left">
              <%= f.password_field :password, autocomplete: "off", class: "input", placeholder: "パスワード(6文字以上)" %>
              <span class="icon is-small is-left"><%= fa_icon "lock" %></i></span>
            </p>
          </div>
          <div class="field">
            <p class="control has-icons-left">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "input", placeholder: "パスワード再入力" %>
              <span class="icon is-small is-left"><%= fa_icon "lock" %></span>
            </p>
          </div>
          <div class="field">
            <div class="actions field" style="padding:10px 0;">
              <%= f.submit "パスワードを更新する", class: "button is-link is-fullwidth is-rounded" %>
            </div>
          </div>
        <% end %>
        <div style="padding:20px;">
          <p class="has-text-centered is-size-7 has-text-grey"><%= render "devise/shared/links" %></p>
        </div>
    </div>
  </div>
</div>