<article class="media">
  <div class="columns is-mobile">
    <div class="column is-4">
      <p class="image">
        <%= link_to product do %>
          <%= image_tag product.thumbnail_url(:thumb) %>
        <% end %>
      </p>
    </div>
    <div class="column">
      <div class="content">
        <p>
          <strong><%= link_to product.name, product %></strong>
          <br>
          <span class="is-size-7"><%= product.desc.truncate(30) %></span>
        </p>
      </div>
    </div>
  </div>
</article>