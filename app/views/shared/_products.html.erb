 <article class="media">
    <div class="columns">
      <div class="column is-3">
        <p class="image">
          <%= link_to product do %>
            <%= image_tag product.thumbnail_url(:thumb) %>
          <% end %>
        </p>
      </div>
      <div class="column">
        <div class="columns is-mobile">
          <div class="column ">
            <div class="content">
              <p>
                <strong><%= link_to product.name, product %></strong><span> </span>
                <small><%= link_to (fa_icon 'external-link'), product.url, target: '_blank'%></small>
                <%= link_to "http://twitter.com/intent/tweet?text=#{product.name}&url=#{product_url(product)}&via=productsquare&related=ProductSquare&hashtags=ProductSquare,#{product.name}" do %>
                  <%= fa_icon 'twitter' %>
                <% end %>
                <span style="font-size: 0.6em">
                  <% if current_user&.admin? %>
                    <%= link_to '編集', edit_product_path(product) %>
                    <span> </span>
                    <%= link_to '削除', product, method: :delete, data: {confirm: '本当に削除しますか?'} %>
                  <% end %>
                </span>
                <br>
                <span class="is-size-7"><%= product.desc %></span>
              </p>
              <div class="content">
                <% product.tags.each do |tag| %>
                  <span class="tag is-rounded is-size-7" >
                    <%= link_to tag.label, tag_path(tag)%>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
          <div class="column is-narrow">
            <%= render 'likes/like', product: product %>
          </div>
        </div>
      </div>
    </div>
  </article>