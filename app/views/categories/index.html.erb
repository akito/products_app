<div class="columns">
  <div class="column is-12">
    <section class="section" style="padding: 0.5rem 1.5rem;">
      <div class="columns" style="flex-wrap: wrap;">
        <% @categories.each do |category| %>
        <div class="column is-2">
          <div class="box is-shadowless has-background-white-ter">
            <p><%= link_to category.name, category %></p>
            <p class="is-size-7"><%= category.description %></p>
            <% if user_signed_in? and current_user.admin?%>
              <td><%= link_to 'Edit', edit_category_path(category), class: 'is-size-7' %></td>
              <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'is-size-7' %></td>
            <% end %>
          </div>
        </div>
        <% end %>
        <% if user_signed_in? and current_user.admin? %>
        <div class="column is-2">
          <div class="box is-shadowless has-background-white-ter">
              <%= link_to 'カテゴリーを作成する', new_category_path, class: 'is-size-7'%>
          </div>
        </div>
        <% end %>
      </div>
    </section>
  </div>
</div>

